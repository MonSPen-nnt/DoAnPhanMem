        .contactinfo {
            display: flex;
            align-items: center; /* Center items vertically */
        }

            .contactinfo ul {
                list-style: none; /* Remove default list styling */
                padding: 0; /* Remove padding */
                margin: 0; /* Remove margin */
                display: flex; /* Flex layout for horizontal alignment */
            }

            .contactinfo li {
                margin-right: 15px; /* Reduced space between items */
            }

            .contactinfo a {
                text-decoration: none; /* Remove underline */
                color: #333; /* Text color */
                display: flex; /* Flex for icon alignment */
                align-items: center; /* Center icon and text vertically */
            }

            .contactinfo img {
                width: 24px; /* Smaller icon size */
                margin-right: 5px; /* Space between icon and text */
            }

        .social-icons {
            display: flex; /* Flex layout for horizontal alignment */
            justify-content: flex-end; /* Align to the right */
            padding-top: 5px;
        }

            .social-icons ul {
                list-style: none; /* Remove default list styling */
                padding: 0; /* Remove padding */
                margin: 0; /* Remove margin */
                display: flex; /* Flex layout */
            }

            .social-icons li {
                margin-left: 15px; /* Reduced space between social icons */
            }

            .social-icons a {
                display: flex; /* Flex for icon alignment */
                align-items: center; /* Center icon vertically */
            }

            .social-icons img {
                width: 24px; /* Smaller icon size */
                transition: transform 0.3s; /* Smooth scaling effect on hover */
            }

                .social-icons img:hover {
                    transform: scale(1.1); /* Slightly scale up on hover */
                }

            /* Ensure proper alignment */
            .social-icons ul {
                justify-content: flex-end; /* Align items to the right */
                align-items: center; /* Center vertically */
                height: 100%; /* Full height to center properly */
            }
    </style>


