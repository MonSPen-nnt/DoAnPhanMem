@model DAPMver1.Data.SanPham

@{
    ViewData["Title"] = "Create";
}

<h1>Tạo mới sản phẩm<h1>

<h4>SanPham</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenSanPham"></label>
                <input asp-for="TenSanPham" class="form-control" id="productName" />
                        <span asp-validation-for="TenSanPham" class="text-danger"></span>
                    </div>
            <!-- Các trường khác của sản phẩm -->
            <div class="form-group">
                <label asp-for="GiaTienMoi" class="control-label"></label>
                <input asp-for="GiaTienMoi" class="form-control" />
                <span asp-validation-for="GiaTienMoi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GiaTienCu" class="control-label"></label>
                <input asp-for="GiaTienCu" class="form-control" />
                <span asp-validation-for="GiaTienCu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MoTa" class="control-label"></label>
                <input asp-for="MoTa" class="form-control" />
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>
            <div>
                <label>Hình Ảnh:</label>
                <input type="file" name="file" />
            </div>
            <div class="form-group">
                <label asp-for="MaVatLieu" class="control-label"></label>
                <select asp-for="MaVatLieu" class ="form-control" asp-items="ViewBag.MaVatLieu"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaDanhMuc" class="control-label"></label>
                <select asp-for="MaDanhMuc" class ="form-control" asp-items="ViewBag.MaDanhMuc"></select>
            </div>
            <div class="form-group">
                <label asp-for="MaNhaCungCap" class="control-label"></label>
                <select asp-for="MaNhaCungCap" class ="form-control" asp-items="ViewBag.MaNhaCungCap"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
