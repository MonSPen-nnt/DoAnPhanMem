@model IEnumerable<DAPMver1.Data.NguoiDung>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách người dùng</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Tên Người Dùng
            </th>
            <th>
            </th>
            <th>
                Số Điện Thoại
            </th>
            <th>
                Ảnh Đại Diện
            </th>
            <th>
            </th>
            <th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenNguoiDung)
                </td>
                <td>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sdt)
                </td>
                <td>
                    <img src="@item.AnhDaiDien" width="100"/>
                     </td>
                <td>
                </td>
                <td>
                </td>
                <td>

                    <a asp-action="Details" asp-route-id="@item.MaNguoiDung">Chi tiết</a>

                </td>
            </tr>
        }
    </tbody>
</table>