@model IEnumerable<DAPMver1.Data.SanPham>
﻿<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ThuanTaiJWR</title>
    <link rel="stylesheet" href="~/css/HomeStyle.css">
</head>
<body>
   

    <section class="products-section">
        @if (Model != null && Model.Any())
        {
        <div class="container">
            <h2>Sản phẩm</h2>
           
                <div class="products-grid" style="display:flex;justify-content:center;">

                    @foreach (var product in Model)
                    {
                        <div class="col-md-4">
                            <div class="card mb-4 shadow-sm">
                                <img src="@product.AnhSp" class="card-img-top" alt="@product.TenSanPham" />
                                <div class="card-body">
                                    <h5 class="card-title">@product.TenSanPham</h5>
                                    <p class="card-text">
                                        Giá cũ: <del>@product.GiaTienCu</del><br />
                                        Giá mới: @product.GiaTienMoi
                                    </p>
                                    <a href="~/Product/ChiTietSP/@product.MaSanPham" class="btn btn-primary">Chi tiết</a>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="product-item">
                        <a href="~/Product/ChiTietSP">
                            <img src="~/lib/images/BongTaiKimCuongVangY.png" alt="Product 2">
                            <h3>Dây chuyền bạc</h3>
                            <p class="price">2.500.000 VND</p>
                        </a>
                        <button class="add-to-cart">Thêm vào giỏ</button>
                    </div>
                    <div class="product-item">
                        <a href="~/Product/ChiTietSP">
                            <img src="~/lib/images/BongTaiKimCuongVangY.png" alt="Product 3">
                            <h3>Nhẫn kim cương</h3>
                            <p class="price">15.000.000 VND</p>
                        </a>
                        <button class="add-to-cart">Thêm vào giỏ</button>
                    </div>
                    <div class="product-item">
                        <a href="~/Product/ChiTietSP">
                            <img src="~/lib/images/BongTaiKimCuongVangY.png" alt="Product 4">
                            <h3>Bông tai ngọc trai</h3>
                            <p class="price">3.200.000 VND</p>
                        </a>
                        <button class="add-to-cart">Thêm vào giỏ</button>
                    </div>
                </div>

            </div>
        }
        else
        {
            <p>Không có sản phẩm nào để hiển thị.</p>
        }
    </section>

    
</body>
</html>