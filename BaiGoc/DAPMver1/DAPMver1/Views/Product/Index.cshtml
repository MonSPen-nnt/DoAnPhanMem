@model IEnumerable<DAPMver1.Data.SanPham>

<h2>Danh sách sản phẩm</h2>

<a asp-action="Create">Thêm sản phẩm</a>

<table>
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Giá tiền mới</th>
            <th>Giá tiền cũ</th>
            <th>Ngày tạo</th>
            <th>Loại sản phẩm</th>
            <th>Nhà cung cấp</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.TenSanPham</td>
                <td>@product.GiaTienMoi</td>
                <td>@product.GiaTienCu</td>
                <td>@product.NgayTao</td>
                <td>@product.MaDanhMucNavigation?.TenDanhMuc</td>
                <td>@product.MaNhaCungCapNavigation?.TenNhaCungCap</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.MaSanPham">Chỉnh sửa</a> |
                    <a asp-action="Delete" asp-route-id="@product.MaSanPham" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">Xóa</a>
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.MaSanPham">Chi tiết</a> |
                    <a asp-action="Edit" asp-route-id="@product.MaSanPham">Chỉnh sửa</a> |
                    <a asp-action="Delete" asp-route-id="@product.MaSanPham" onclick="return confirm('Bạn có chắc chắn muốn xóa?');">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
   

</table>
