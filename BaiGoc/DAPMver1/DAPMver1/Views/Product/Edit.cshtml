@model DAPMver1.Data.SanPham

<h2>Chỉnh sửa sản phẩm</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="MaSanPham" />
    <div>
        <label>Tên sản phẩm:</label>
        <input asp-for="TenSanPham" />
    </div>
    <div>
        <label>Giá tiền mới:</label>
        <input asp-for="GiaTienMoi" />
    </div>
    <div>
        <label>Giá tiền cũ:</label>
        <input asp-for="GiaTienCu" />
    </div>
  
    <div>
        <label>Mô tả:</label>
        <textarea asp-for="MoTa"></textarea>
    </div>
    <div>
        <label>Ảnh sản phẩm:</label>
        <input asp-for="AnhSp" />
    </div>
    <div>
        <label>Loại sản phẩm:</label>
        <select asp-for="MaDanhMuc" asp-items="@(new SelectList(ViewBag.DanhMuc, "MaDanhMuc", "TenDanhMuc", Model.MaDanhMuc))"></select>
    </div>
    <div>
        <label>Chất liệu:</label>
        <select asp-for="MaVatLieu" asp-items="@(new SelectList(ViewBag.VatLieu, "MaVatLieu", "TenVatLieu", Model.MaVatLieu))"></select>
    </div>
    <div>
        <label>Nhà cung cấp:</label>
        <select asp-for="MaNhaCungCap" asp-items="@(new SelectList(ViewBag.NhaCungCap, "MaNhaCungCap", "TenNhaCungCap", Model.MaNhaCungCap))"></select>
    </div>
    <button type="submit">Cập nhật</button>
</form>
